{
    //---------------------------------------------------------
    // SECURITY
    //---------------------------------------------------------
    "security.workspace.trust.untrustedFiles": "open",
    "telemetry.telemetryLevel": "off",
    //---------------------------------------------------------
    // SEARCH
    //---------------------------------------------------------
    // "search.exclude": {
    // 	"**/Modules": true
    // },
    //---------------------------------------------------------
    // FILES
    //---------------------------------------------------------
    "files.autoSave": "onFocusChange",
    "files.trimTrailingWhitespace": true,
    "files.enableTrash": true,
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    //---------------------------------------------------------
    // EDITOR
    //---------------------------------------------------------
    // "editor.formatOnSave": true,
    "editor.rulers": [
        120
    ],
    "editor.fontSize": 16,
    "editor.fontLigatures": true,
    "editor.fontFamily": "'Victor Mono', 'FiraCode NFM Retina', 'Fira Code', Consolas, 'Courier New', monospace",
    "editor.stickyScroll.enabled": false,
    "editor.accessibilitySupport": "off",
    "editor.renderWhitespace": "trailing",
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "comment",
                "settings": {
                    "fontStyle": "italic"
                }
            }
        ]
    },
    "editor.trimAutoWhitespace": true,
    //---------------------------------------------------------
    // WORKBENCH
    //---------------------------------------------------------
    "workbench.settings.editor": "json",
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorCustomizations": {
        "panel.border": "#ee8800",
        // "panel.background": "#1d1d25",
    },
    "workbench.preferredLightColorTheme": "Quiet Light",
    "workbench.startupEditor": "none",
    //---------------------------------------------------------
    // WINDOW
    //---------------------------------------------------------
    "window.autoDetectColorScheme": true,
    "window.commandCenter": true,
    //---------------------------------------------------------
    // TERMINAL
    //---------------------------------------------------------
    "terminal.integrated.shellIntegration.enabled": true,
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontFamily": "'FiraCode Nerd Font'",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.profiles.windows": {
        "Pwsh": {
            "path": "${env:USERPROFILE}/scoop/apps/pwsh/current/pwsh.EXE",
            "icon": "terminal-powershell",
            "args": [
                "-nologo"
            ]
        },
    },
    "terminal.integrated.tabs.enabled": false,
    //---------------------------------------------------------
    // PYTHON  (check https://aka.ms/AAlgvkb)
    //---------------------------------------------------------
    "python.languageServer": "Pylance",
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
    },
    "black-formatter.args": [
        "--line-length",
        "119"
    ],
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length",
        "120"
    ],
    "python.linting.enabled": true,
    //---------------------------------------------------------
    // CMAKE
    //---------------------------------------------------------
    "cmake.configureOnOpen": true,
    "cmake.enableTraceLogging": false,
    "cmake.revealLog": "never",
    //---------------------------------------------------------
    // C++
    //---------------------------------------------------------
    "C_Cpp.experimentalFeatures": "enabled",
    "C_Cpp.workspaceSymbols": "Just My Code",
    "C_Cpp.enhancedColorization": "enabled",
    "C_Cpp.workspaceParsingPriority": "highest",
    "C_Cpp.autocomplete": "default",
    "C_Cpp.dimInactiveRegions": true,
    "C_Cpp.codeFolding": "enabled",
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.clang_format_style": "file",
    "C_Cpp.autoAddFileAssociations": true,
    "C_Cpp.suggestSnippets": true,
    // "[cpp]": {
    //     "editor.defaultFormatter": "ms-vscode.cpptools"
    // },
    "glsllint.glslangValidatorPath": "C:/VulkanSDK/1.3.239.0/Bin/glslangValidator.exe",
    // "glsllint.glslangValidatorArgs": "-V",
    //---------------------------------------------------------
    // POWERSHELL
    //---------------------------------------------------------
    "powershell.promptToUpdatePowerShell": false,
    "powershell.enableReferencesCodeLens": false,
    "powershell.integratedConsole.showOnStartup": false,
    "powershell.integratedConsole.startInBackground": true,
    "powershell.integratedConsole.focusConsoleOnExecute": false,
    "powershell.integratedConsole.suppressStartupBanner": true,
    //---------------------------------------------------------
    // GIT
    //---------------------------------------------------------
    "git.mergeEditor": true,
    "merge-conflict.autoNavigateNextConflict.enabled": true,
    //---------------------------------------------------------
    // WEB
    //---------------------------------------------------------
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "astro",
        "typescript",
        "typescriptreact"
    ],
    "prettier.documentSelectors": [
        "**/*.astro"
    ],
    "[astro]": {
        "editor.defaultFormatter": "astro-build.astro-vscode"
    },
    // "html.format.enable": false,
    "css.enabledLanguages": [
        "html",
        "astro"
    ],
    // "errorLens.lintFilePaths": {
    // 	"eslint": [
    // 		"**/*.eslintrc.{js,cjs,yaml,yml,json}",
    // 		"**/*package.json"
    // 	],
    // 	"Stylelint": [
    // 		"**/*.stylelintrc",
    // 		"**/*.stylelintrc.{cjs,js,json,yaml,yml}",
    // 		"**/*stylelint.config.{cjs,js}",
    // 		"**/*package.json"
    // 	]
    // },
    //---------------------------------------------------------
    // OTHERS
    //---------------------------------------------------------
    "vsicons.dontShowNewVersionMessage": true,
    "cmake.options.statusBarVisibility": "visible",
    "accessibility.signals.terminalBell": {
        "sound": "on"
    },
    "terminal.integrated.enableVisualBell": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "phase",
    "terminal.integrated.stickyScroll.enabled": true,
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],
    "editor.minimap.enabled": false,
    "cmake.showOptionsMovedNotification": false,
    "explorer.confirmDelete": false,
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "[ ]",
        "[x]",
        "asdfasdf"
    ],
    "markdown-pdf.includeDefaultStyles": true,
    "markdown-pdf.format": "A4",
    "markdown-pdf.displayHeaderFooter": true,
    "markdown-pdf.headerTemplate": "<div></div>",
    "markdown-pdf.footerTemplate": "<div style=\"font-size: 9px; margin: 0 auto;\"><span class='pageNumber'></span> / <span class='totalPages'></span> :: Daniel Camba for OMI</div>",
    "workbench.editorAssociations": {
        "{git,gitlens,git-graph}:/**/*.{md,csv,svg}": "default"
    },
    "files.associations": {
        "*.inc": "shellscript"
    },
    "workbench.activityBar.location": "bottom",
    "find-it-faster.general.useTerminalInEditor": true,
    "workbench.preferredDarkColorTheme": "Gruvbox Dark Hard",
    "window.customTitleBarVisibility": "auto"
}
