#!/usr/bin/env fish

#-------------------------------------------------------------------------------
# Common setup "Shell-Agnostic"  (Part 1)

set -p PATH "$HOME/.local/bin"

set DOTFILES_SCRIPTS "$HOME/.dotfiles/linux/scripts"
set -p PATH "$DOTFILES_SCRIPTS"
source "$DOTFILES_SCRIPTS/_exports_"


#-------------------------------------------------------------------------------
# Plugins

source "$HOME/.dotfiles/linux/assets/done.fish"
set -U __done_min_cmd_duration 10000
set -U __done_notification_urgency_level low


#-------------------------------------------------------------------------------
# Format man pages
set -x MANROFFOPT "-c"
set -x MANPAGER "sh -c 'col -bx | bat -l man -p'"


#-------------------------------------------------------------------------------
# Common setup "Shell-Agnostic"  (Part 2)

starship init fish | source
source "$DOTFILES_SCRIPTS/_aliases_"
alias configreload='source $HOME/.config/fish/config.fish'
