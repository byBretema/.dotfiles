{
  //--------------------------------------------------------------------------
  // SECURITY
  "security.workspace.trust.untrustedFiles": "open",
  "telemetry.telemetryLevel": "off",
  //--------------------------------------------------------------------------
  // SEARCH
  //--------------------------------------------------------------------------
  // "search.exclude": {
  //  "**/Modules": true
  // },
  //--------------------------------------------------------------------------
  // FILES
  //--------------------------------------------------------------------------
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "files.enableTrash": true,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.associations": {
    "*.inc": "shellscript",
  },
  "explorer.confirmDelete": false,
  //--------------------------------------------------------------------------
  // EDITOR
  //--------------------------------------------------------------------------
  "editor.formatOnSave": false,
  "editor.rulers": [80, 100, 120],
  "editor.fontSize": 15,
  "editor.fontLigatures": true,
  "editor.fontFamily": "'Fira Code'",
  // "editor.fontFamily": "'Victor Mono'",
  // "editor.stickyScroll.enabled": false,
  "editor.accessibilitySupport": "off",
  "editor.renderWhitespace": "trailing",
  "editor.tokenColorCustomizations": {
    "comments": "#2299FF",
  },
  "editor.trimAutoWhitespace": true,
  "editor.semanticTokenColorCustomizations": {
    "enabled": true,
  },
  "editor.scrollbar.vertical": "hidden",
  "editor.minimap.autohide": "mouseover",
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "phase",
  "[markdown]": {
    "diffEditor.ignoreTrimWhitespace": true,
  },
  //--------------------------------------------------------------------------
  // WORKBENCH
  //--------------------------------------------------------------------------
  "workbench.settings.editor": "json",
  "workbench.iconTheme": "icons",
  "workbench.colorCustomizations": {
    "panel.border": "#ee8800",
  },
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "right",
  "workbench.editor.enablePreview": false,
  "workbench.activityBar.location": "bottom",
  "workbench.preferredDarkColorTheme": "Gruvbox Dark Hard",
  "workbench.preferredLightColorTheme": "Gruvbox Light Hard",
  "window.commandCenter": true,
  "window.menuBarVisibility": "toggle",
  "window.customTitleBarVisibility": "windowed",
  //--------------------------------------------------------------------------
  // TERMINALS
  //--------------------------------------------------------------------------
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "'FiraCode Nerd Font'",
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.profiles.windows": {
    "Pwsh": {
      "path": "pwsh.EXE",
      "icon": "terminal-powershell",
      "args": ["-nologo"],
    },
  },
  "terminal.integrated.tabs.enabled": false,
  "accessibility.signals.terminalBell": { "sound": "off" },
  "terminal.integrated.enableVisualBell": true,
  "terminal.integrated.stickyScroll.enabled": true,
  //--------------------------------------------------------------------------
  // PYTHON  (check https://aka.ms/AAlgvkb)
  //--------------------------------------------------------------------------
  "python.languageServer": "Pylance",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
  },
  "black-formatter.args": ["--line-length", "120"],
  "python.analysis.typeCheckingMode": "standard",
  //--------------------------------------------------------------------------
  // CMAKE
  //--------------------------------------------------------------------------
  "cmake.revealLog": "focus",
  "cmake.configureOnOpen": true,
  "cmake.enableTraceLogging": true,
  "cmake.options.statusBarVisibility": "icon",
  "cmake.pinnedCommands": [
    // "workbench.action.tasks.configureTaskRunner",
    // "workbench.action.tasks.runTask",
  ],
  //--------------------------------------------------------------------------
  // C++
  //--------------------------------------------------------------------------
  "clangd.enable": true,
  "clangd.enableHover": true,
  "clangd.restartAfterCrash": true,
  "clangd.enableCodeCompletion": true,
  "clangd.inactiveRegions.opacity": 0.55,
  "clangd.inactiveRegions.useBackgroundHighlight": false,
  //--------------------------------------------------------------------------
  // POWERSHELL
  //--------------------------------------------------------------------------
  "powershell.promptToUpdatePowerShell": false,
  "powershell.enableReferencesCodeLens": false,
  "powershell.integratedConsole.showOnStartup": false,
  "powershell.integratedConsole.startInBackground": true,
  "powershell.integratedConsole.focusConsoleOnExecute": false,
  "powershell.integratedConsole.suppressStartupBanner": true,
  //--------------------------------------------------------------------------
  // HELIX
  //--------------------------------------------------------------------------
  "helixKeymap.toggleRelativeLineNumbers": true,
  // "helixKeymap.yankHighlightBackgroundColor": "#F8F3AB",
  "helixKeymap.yankHighlightBackgroundColor": "#88FF3333",
  //--------------------------------------------------------------------------
  // GIT
  //--------------------------------------------------------------------------
  "git.mergeEditor": true,
  "merge-conflict.autoNavigateNextConflict.enabled": true,
  //--------------------------------------------------------------------------
  // WEB
  //--------------------------------------------------------------------------
  // "eslint.validate": [
  //     "javascript",
  //     "javascriptreact",
  //     "astro",
  //     "typescript",
  //     "typescriptreact"
  // ],
  // "prettier.documentSelectors": [
  //     "**/*.astro"
  // ],
  // "[astro]": {
  //     "editor.defaultFormatter": "astro-build.astro-vscode"
  // },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
  },
  "javascript.format.enable": true,
  "css.enabledLanguages": ["html", "astro"],
  //--------------------------------------------------------------------------
  // MARKDOWN
  //--------------------------------------------------------------------------
  "markdown-pdf.includeDefaultStyles": true,
  "markdown-pdf.format": "A4",
  "markdown-pdf.displayHeaderFooter": true,
  "markdown-pdf.headerTemplate": "<div></div>",
  "markdown-pdf.footerTemplate": "<div style=\"font-size: 9px; margin: 0 auto;\"><span class='pageNumber'></span> / <span class='totalPages'></span> :: Dani Camba  ---  @ByBretema</div>",
  //--------------------------------------------------------------------------
  // TODO TREE
  //--------------------------------------------------------------------------
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]",
    "asdfasdf",
  ],
  //--------------------------------------------------------------------------
  // EXTENSIONS
  //--------------------------------------------------------------------------
  "fiveServer.navigate": true,
  "find-it-faster.general.useTerminalInEditor": true,
  "[dynamic csv]": {
    "editor.inlayHints.maximumLength": 0,
  },
  "editor.bracketPairColorization.enabled": false,
  "window.autoDetectHighContrast": false,
  //--------------------------------------------------------------------------
  // DYNAMIC / USORTED
  //--------------------------------------------------------------------------
  "shellformat.path": "/usr/bin/shfmt",
  "bashBeautify.tabSize": 4,
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
  },
  "qt-core.additionalQtPaths": [
    {
      "name": "Qt-5.15.18-linux-g++_from_PATH",
      "path": "/usr/bin/qtpaths"
    },
    {
      "name": "Qt-5.15.18-linux-g++_from_PATH",
      "path": "/usr/bin/qmake"
    }
  ],
  "qt-core.qtInstallationRoot": "/home/dac/Qt",
  "editor.inlayHints.enabled": "off",
  "workbench.colorTheme": "Gruvbox Dark Hard",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "zig.zls.enabled": "off",
}
